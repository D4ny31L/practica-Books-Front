<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#D7F8D3F0"
    android:padding="8dp"
    android:orientation="vertical"
    android:layout_marginTop="8sp"
    android:layout_marginLeft="8sp"
    android:layout_marginRight="8sp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/booksViewerBookname"
        android:layout_width="match_parent"
        tools:text= "Bookname"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:text= "Author:"
            android:textSize="14sp"
            android:layout_marginLeft="8sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/booksViewerAuthor"
            android:layout_width="match_parent"
            tools:text= "Author"
            android:textSize="14sp"
            android:layout_marginLeft="3sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:text= "Year:"
            android:textSize="14sp"
            android:layout_marginLeft="8sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/booksViewerYear"
            android:layout_width="match_parent"
            tools:text= "Year"
            android:textSize="14sp"
            android:layout_marginLeft="3sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:text= "Price:"
            android:textSize="14sp"
            android:layout_marginLeft="8sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/booksViewerPrice"
            android:layout_width="match_parent"
            tools:text= "Price"
            android:textSize="14sp"
            android:layout_marginLeft="3sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:text= "Quantity:"
            android:textSize="14sp"
            android:layout_marginLeft="8sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/booksViewerQuantity"
            android:layout_width="match_parent"
            tools:text= "Quantity"
            android:textSize="14sp"
            android:layout_marginLeft="3sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:text= "Available:"
            android:textSize="14sp"
            android:layout_marginLeft="8sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/booksViewerAvil"
            android:layout_width="match_parent"
            tools:text= "Available"
            android:textSize="14sp"
            android:layout_marginLeft="3sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:text= "Date:"
            android:textSize="14sp"
            android:layout_marginLeft="8sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/booksViewerDate"
            android:layout_width="match_parent"
            tools:text= "Date"
            android:textSize="14sp"
            android:layout_marginLeft="3sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:text= "ISBN:"
            android:textSize="14sp"
            android:layout_marginLeft="8sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/booksViewerISBN"
            android:layout_width="match_parent"
            tools:text= "ISBN"
            android:textSize="14sp"
            android:layout_marginLeft="3sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>